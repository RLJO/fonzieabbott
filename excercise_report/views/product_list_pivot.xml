<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.ui.view" id="view_product_view_pivot">
            <field name="name">product.template.pivot</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <pivot string="Product List" sample="2">
                    <field name="name" type="row"/>
                    <field name="standard_price" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="sale_order_action_view_order_pivot_new" model="ir.actions.act_window">
            <field name="sequence" eval="6"/>
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="product.view_product_view_pivot"/>
            <field name="act_window_id" ref="action_orders"/>
        </record>




</odoo>
